# build stage
FROM node:18-alpine AS build
WORKDIR /usr/src/app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

# runtime stage (nginx)
FROM nginx:alpine
COPY --from=build /usr/src/app/build /usr/share/nginx/html
# optional: custom nginx conf if needed
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]